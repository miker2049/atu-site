<header class="[ intro ] [ pad-top-900 pad-bottom-max ]">
    <div class="[ inner-wrapper ] [ sf-flow ] [ two-cols ] " >
        <div>
            <h1 class="[ intro__heading] [ text-800 md:text-900 leading-tight ] [ p-name ]">{{ introHeading }}</h1>
            {% if introSummary %}
                <div class="[ intro__summary ] [ sf-flow ] [ leading-mid measure-short ] " >
                    <div>{{ introSummary | safe }}</div>
                </div>
            {% endif %}
        </div>
    </div>
</header>
